{
  "name": "Chrome Extension",
  "version": "1.0",
  "description": "This is a basic Chrome Extension",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "image/16.png",
      "32": "image/32.png",
      "48": "image/48.png",
      "128": "image/128.png"
    },
    "default_title": "Chrome Extension"
  },
  "icons": {
    "16": "image/16.png",
    "32": "image/32.png",
    "48": "image/48.png",
    "128": "image/128.png"
  },
  "manifest_version": 2
}